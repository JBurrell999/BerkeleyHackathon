# Simple airplane model with normals
# Vertices
v 0.0 0.0 2.0    # Nose (1)
v -1.0 0.0 0.0   # Left wing tip (2)
v 1.0 0.0 0.0    # Right wing tip (3)
v 0.0 0.0 -2.0   # Tail (4)
v 0.0 0.5 -1.0   # Top of vertical stabilizer (5)
v -0.5 0.0 -1.5  # Left horizontal stabilizer (6)
v 0.5 0.0 -1.5   # Right horizontal stabilizer (7)
v 0.0 -0.2 0.0   # Bottom center (8)

# Vertex normals
vn 0.0 1.0 0.0   # Up
vn 0.0 -1.0 0.0  # Down
vn 1.0 0.0 0.0   # Right
vn -1.0 0.0 0.0  # Left
vn 0.0 0.0 1.0   # Forward
vn 0.0 0.0 -1.0  # Back

# Main body triangles (with normals)
f 1//5 2//1 3//1    # Top front
f 2//4 4//6 3//3    # Top middle
f 2//4 8//2 4//6    # Left bottom
f 3//3 4//6 8//2    # Right bottom
f 1//5 8//2 2//4    # Left front bottom
f 1//5 3//3 8//2    # Right front bottom

# Vertical stabilizer
f 4//6 5//1 7//3    # Right side
f 4//6 6//4 5//1    # Left side

# Horizontal stabilizers
f 4//6 6//4 8//2    # Left
f 4//6 7//3 8//2    # Right 